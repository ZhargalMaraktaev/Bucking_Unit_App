 <Window x:Class="Bucking_Unit_App.Views.PLCDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные ПЛК" Height="700" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblConnectionStatus" Content="Подключение..." Foreground="Red" Grid.Row="0"/>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TorqueUpperLimitHMI -->
                <Label Content="Верхний предел крутящего момента:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblTorqueUpperLimitHMI" Content="N/A" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtTorqueUpperLimitHMI" Grid.Row="1" Grid.Column="2" Width="100" Margin="5"/>
                <!-- IdleTorqueHMI -->
                <Label Content="Управляемый крутящий момент:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblIdleTorqueHMI" Content="N/A" Grid.Row="2" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtIdleTorqueHMI" Grid.Row="2" Grid.Column="2" Width="100" Margin="5"/>
                <!-- StopTorqueHMI -->
                <Label Content="Остановочный крутящий момент:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblStopTorqueHMI" Content="N/A" Grid.Row="3" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtStopTorqueHMI" Grid.Row="3" Grid.Column="2" Width="100" Margin="5"/>
                <!-- TorqueLowerLimitHMI -->
                <Label Content="Нижний предел крутящего момента:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblTorqueLowerLimitHMI" Content="N/A" Grid.Row="4" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtTorqueLowerLimitHMI" Grid.Row="4" Grid.Column="2" Width="100" Margin="5"/>
                <!-- QuantityHMI -->
                <Label Content="Тормозной крутящий момент:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblQuantityHMI" Content="N/A" Grid.Row="5" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtQuantityHMI" Grid.Row="5" Grid.Column="2" Width="100" Margin="5"/>
                <!-- StartingTorqueHMI -->
                <Label Content="Начальный крутящий момент:" Grid.Row="6" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblStartingTorqueHMI" Content="N/A" Grid.Row="6" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtStartingTorqueHMI" Grid.Row="6" Grid.Column="2" Width="100" Margin="5"/>
                
                <!-- CurlingRotationCount -->
                <Label Content="Количество оборотов при затвердевании:" Grid.Row="7" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblCuringRotationCount" Content="N/A" Grid.Row="7" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtCuringRotationCount" Grid.Row="7" Grid.Column="2" Width="100" Margin="5"/>
                
                <!-- StatusValue -->
                <Label Content="Значение состояния:" Grid.Row="8" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblStatusValue" Content="N/A" Grid.Row="8" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtStatusValue" Grid.Row="8" Grid.Column="2" Width="100" Margin="5"/>
                
                <!-- StatusTime -->
                <Label Content="Время состояния:" Grid.Row="9" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblStatusTime" Content="N/A" Grid.Row="9" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtStatusTime" Grid.Row="9" Grid.Column="2" Width="100" Margin="5"/>

                <!-- FeedDelayTimeHMI -->
                <Label Content="Задержка подачи трубы:" Grid.Row="10" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblFeedDelayTimeHMI" Content="N/A" Grid.Row="10" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtFeedDelayTimeHMI" Grid.Row="10" Grid.Column="2" Width="100" Margin="5"/>
                <!-- ReturnDelayTimeHMI -->
                <Label Content="Задержка выхода трубы:" Grid.Row="11" Grid.Column="0" Margin="5"/>
                <Label x:Name="lblReturnDelayTimeHMI" Content="N/A" Grid.Row="11" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="txtReturnDelayTimeHMI" Grid.Row="11" Grid.Column="2" Width="100" Margin="5"/>
            </Grid>
        </ScrollViewer>
        <Label x:Name="lblCurrentXmlFile" Content="Текущий XML-файл: Не выбран" Grid.Row="3" Margin="5"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button x:Name="btnReadParameters" Content="Считать параметры" Margin="5" MinWidth="200" Height="40" FontSize="14" Click="btnReadParameters_Click"/>
            <Button x:Name="btnWriteParameters" Content="Записать параметры в контроллер" Margin="5" MinWidth="200" Height="40" FontSize="14" Click="btnWriteParameters_Click"/>
            <Button x:Name="btnSaveParameters" Content="Сохранить параметры" Margin="5" MinWidth="200" Height="40" FontSize="14" Click="btnSaveParameters_Click"/>
        </StackPanel>
    </Grid>
</Window>