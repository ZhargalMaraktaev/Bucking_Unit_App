 <Window x:Class="Bucking_Unit_App.Views.PLCDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные PLC" Height="500" Width="1000">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Данные PLC" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Состояние подключения:" Width="120" FontSize="15" Padding="0,5,0,0"/>
                <Label x:Name="lblConnectionStatus" Content="Проверка..." VerticalAlignment="Center" FontSize="15"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="TorqueUpperLimitHMI:" Width="120" FontSize="15" Padding="0,5,0,0"/>
                <Label x:Name="lblFrontClamp" Content="" FontSize="15" Padding="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="ActualTorqueHMI:" Width="120" FontSize="15" Padding="0,5,0,0"/>
                <Label x:Name="lblActualTorque" Content="" VerticalAlignment="Center" FontSize="15"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <Label Content="TorqueSetpoint:" Width="120" FontSize="15" Padding="0,5,0,0"/>
                <TextBox x:Name="txtTorqueSetpoint" Width="100" FontSize="15" Padding="0,5,0,0" Text="500.0"/>
            </StackPanel>
            <Button x:Name="btnWriteTorque" Content="Записать TorqueSetpoint" Click="btnWriteTorque_Click" Margin="0,5,0,0" FontSize="15" Width="200" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
