<Window x:Class="Bucking_Unit_App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:Bucking_Unit_App.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Операторская статистика" Height="720" Width="1280" WindowState="Maximized">
    <Window.Resources>
        <local:ComparePlanFactConverter x:Key="ComparePlanFactConverter" />
        <local:MaxPlanFactDifferenceConverter x:Key="MaxPlanFactDifferenceConverter" />
        <!-- Обновленный стиль DataRowStyle только для statsDataPanel -->
        <Style x:Key="DataRowStyle" TargetType="Border">
            <Style.Triggers>
                <!-- Для строки "За смену" в statsDataPanel -->
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ComparePlanFactConverter}">
                            <Binding ElementName="lblShiftPlanItems" Path="Content"/>
                            <Binding ElementName="lblShiftItems" Path="Content"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="#FFE6E6"/>
                </DataTrigger>
                <!-- Для строки "За месяц" в statsDataPanel -->
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ComparePlanFactConverter}">
                            <Binding ElementName="lblMonthPlanItems" Path="Content"/>
                            <Binding ElementName="lblMonthItems" Path="Content"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="#FFE6E6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Секция "Данные оператора" (слева вверху) -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Margin="10">
                <TextBlock Text="Данные оператора" FontSize="25" FontWeight="Bold" TextAlignment="Center"/>
                    <StackPanel x:Name="operatorDataPanel" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Номер карты:" VerticalAlignment="Center" Width="100" FontSize="15" Padding="0,5,0,0"/>
                        <Label x:Name="lblIdCard" Content="" VerticalAlignment="Center" Margin="5,5,0,0" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Табельный №:" VerticalAlignment="Center" Width="100" FontSize="15" Padding="0,5,0,0"/>
                        <Label x:Name="lblTabNumber" Content="" VerticalAlignment="Center" Margin="5,5,0,0" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="ФИО:" VerticalAlignment="Center" Width="100" FontSize="15"/>
                        <Label x:Name="lblFIO" Content="" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Отдел:" VerticalAlignment="Center" Width="100" FontSize="15" Padding="0,10,0,0"/>
                        <TextBlock x:Name="lblDepartment" Text="" VerticalAlignment="Center" Margin="10,5,0,0" TextWrapping="Wrap" Width="200" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Должность:" VerticalAlignment="Center" Width="100" FontSize="15"/>
                        <Label x:Name="lblEmployName" Content="" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="15"/>
                    </StackPanel>
                </StackPanel>
                <Label x:Name="lblCOMConnectionStatus" Content="" Foreground="Red" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="15"/>
                <TextBox x:Name="txtInsertCardPrompt" Text="ВСТАВЬТЕ ПРОПУСК" 
                         Foreground="Red" Background="White" 
                         FontSize="24" FontWeight="Bold" 
                         VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                         Height="200" Width="400" 
                         Visibility="Visible" TextAlignment="Center" IsReadOnly="True" BorderThickness="0">
                    <TextBox.Margin>
                        <Thickness Left="0" Top="100" Right="0" Bottom="0"/>
                    </TextBox.Margin>
                </TextBox>
            </StackPanel>
        </Border>

        <!-- Линия между секциями (горизонтальная) -->
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Fill="Gray" Height="1"/>

        <!-- Секция "Статистика" (слева внизу) -->
        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Для заголовка -->
                        <ColumnDefinition Width="*" />
                        <!-- Для текста, чтобы он занимал остальное пространство -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Тип и размер продукции:" FontSize="15" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" Padding="0,0,0,0"/>

                    <TextBlock x:Name="lblNomenclature" Grid.Column="1" Text="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" 
               Margin="10,0,0,0" TextWrapping="Wrap" Width="Auto" />
                </Grid>
                <!-- statsDataPanel -->
                <Grid x:Name="statsDataPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Статистика" FontSize="25" FontWeight="Bold" TextAlignment="Center" Grid.Row="0"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Заголовки (без стиля) -->
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,0">
                            <TextBlock Text="Период" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,1,0">
                            <TextBlock Text="План шт." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0,1,1,0">
                            <TextBlock Text="Факт шт." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,0">
                            <TextBlock Text="Простои мин." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Fill="Black" Height="1"/>

                        <!-- Строка "За смену" -->
                        <Border x:Name="shiftPeriodBorder" Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,1,0" Style="{StaticResource DataRowStyle}">
                            <TextBlock Text="За смену" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="shiftPlanBorder" Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblShiftPlanItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="shiftFactBorder" Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblShiftItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="shiftDowntimeBorder" Grid.Row="2" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblShiftDowntime" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Fill="Black" Height="1"/>

                        <!-- Строка "За месяц" -->
                        <Border x:Name="monthPeriodBorder" Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,1,1" Style="{StaticResource DataRowStyle}">
                            <TextBlock Text="За месяц" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="monthPlanBorder" Grid.Row="4" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,1" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblMonthPlanItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="monthFactBorder" Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,1" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblMonthItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="monthDowntimeBorder" Grid.Row="4" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,1" Style="{StaticResource DataRowStyle}">
                            <Label x:Name="lblMonthDowntime" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Стиль для строк данных -->
                        <Grid.Resources>
                            <Style x:Key="DataRowStyle" TargetType="Border">
                                <Style.Triggers>
                                    <!-- Для строки "За смену" -->
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ComparePlanFactConverter}">
                                                <Binding ElementName="lblShiftPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                    <!-- Для строки "За месяц" -->
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ComparePlanFactConverter}">
                                                <Binding ElementName="lblMonthPlanItems" Path="Content"/>
                                                <Binding ElementName="lblMonthItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
                    </Grid>
                </Grid>
                <TextBox x:Name="txtNoStatsPrompt" Text="ВСТАВЬТЕ ПРОПУСК" 
                         Foreground="Red" Background="White" 
                         FontSize="24" FontWeight="Bold" 
                         VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                         Height="40" Width="400" 
                         Visibility="Visible" TextAlignment="Center" IsReadOnly="True" BorderThickness="0">
                    <TextBox.Margin>
                        <Thickness Left="0" Top="100" Right="0" Bottom="0"/>
                    </TextBox.Margin>
                </TextBox>
                <TextBlock Text="Выполнение плана по сменам за текущий месяц" FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Row="0"/>
                <!-- allStatsDataPanel -->
                <!-- allStatsDataPanel -->
                <Grid x:Name="allStatsDataPanel" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Заголовок -->
                        <RowDefinition Height="1"/>
                        <!-- Разделитель -->
                        <RowDefinition Height="Auto"/>
                        <!-- Строка А (index 0) -->
                        <RowDefinition Height="1"/>
                        <!-- Разделитель -->
                        <RowDefinition Height="Auto"/>
                        <!-- Строка Б (index 1) -->
                        <RowDefinition Height="1"/>
                        <!-- Разделитель -->
                        <RowDefinition Height="Auto"/>
                        <!-- Строка В (index 2) -->
                        <RowDefinition Height="1"/>
                        <!-- Разделитель -->
                        <RowDefinition Height="Auto"/>
                        <!-- Строка Г (index 3) -->
                        <RowDefinition Height="1"/>
                        <!-- Разделитель -->
                        <RowDefinition Height="Auto"/>
                        <!-- Итоговая строка -->
                    </Grid.RowDefinitions>

                    <!-- Заголовки -->
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,0">
                        <TextBlock Text="Смена" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,1,0">
                        <TextBlock Text="План шт." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0,1,1,0">
                        <TextBlock Text="Факт шт." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,0">
                        <TextBlock Text="Простои мин." FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Fill="Black" Height="1"/>

                    <!-- Строка А (Grid.Row=2) -->
                    <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="0">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="А" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="0">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftAPlanItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="0">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftAFactItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="0">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftADowntime" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Fill="Black" Height="1"/>

                    <!-- Строка Б (Grid.Row=4) -->
                    <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="1">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="Б" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="1">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftBPlanItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="1">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftBFactItems" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="1">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Label x:Name="lblShiftBDowntime" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Rectangle Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Fill="Black" Height="1"/>

                    <!-- Строка В (Grid.Row=6) -->
                    <Border Grid.Row="6" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource MaxPlanFactDifferenceConverter}" ConverterParameter="2">
                                                <Binding ElementName="lblShiftAPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftAFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftBFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftVFactItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGPlanItems" Path="Content"/>
                                                <Binding ElementName="lblShiftGFactItems" Path="Content"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="В" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
